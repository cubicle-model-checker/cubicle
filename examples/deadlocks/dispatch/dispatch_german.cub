(*number_procs 3*)

type t = A1 | A2 | A3 | A4 | None
type d = Z | One | Two | Three | Four | Five

type pc = Empty | L2_1 | L2_2 | L2_3 | L3_1 | L3_2 | L3_3 | L4_1 | L4_2 | L4_3 |  L5_1 | L5_2 | L5_3 | L2_1_1

(*---- Szymanski ----*)
type state = Invalid | Shared | Exclusive
type msg = Empty2 | Reqs | Reqe | Inv | Invack | Gnts | Gnte
(*------------------*)


array Cmd[proc] : t
array Data[proc] : d
array PC1[proc] : pc
array PC2[proc] : pc

var C : t
var P : proc

var Sync : bool

(*---- Szymanski ----*)

var Exgntd : bool
var Curcmd : msg
var CurClient : proc

array Chan1[proc] : msg
array Chan2[proc] : msg
array Chan3[proc] : msg
array Cache[proc] : state
array Invset[proc] : bool
array Shrset[proc] : bool

(*------------------*)


init (i j) { C = None && Cmd[i] = None && Data[i] = Z && PC1[i] = Empty && PC2[i] = Empty && Sync = False &&
     Chan1[i] = Empty2 &&
     Chan2[i] = Empty2 &&
     Chan3[i] = Empty2 &&
     Cache[i] = Invalid &&
     Invset[i] = False &&
     Shrset[i] = False &&
     Curcmd=Empty2 &&
     Exgntd = False

}

	  

unsafe (z1 z2) { Cache[z1] = Exclusive && Cache[z2] <> Invalid }



