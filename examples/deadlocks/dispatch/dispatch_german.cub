transition send_req_shared(n)
requires { Sync = True && Cache[n] = Invalid && Chan1[n] = Empty2 }
{
  Chan1[j] := case 
  	        | j = n : Reqs 
		| _ : Chan1[j];
}


transition send_req_exclusive_1(n)
requires { Sync = True && Cache[n] = Invalid && Chan1[n] = Empty2 }
{ 
  Chan1[j] := case
  	       | j = n : Reqe 
	       | _ : Chan1[j] ;
}

transition send_req_exclusive_2(n)
requires { Sync = True && Cache[n] = Shared && Chan1[n] = Empty2 }
{
  Chan1[j] := case 
   	       | j = n : Reqe 
	       | _ : Chan1[j] ;
}

transition recv_req_shared(n)
requires { Sync = True && Curcmd = Empty2 && Chan1[n] = Reqs }
{ 
  Curcmd := Reqs; 
  CurClient := n; 
  Invset[j] := case | _ : Shrset[j];
  Chan1[j] := case 
  	       | j = n: Empty2 
	       | _ : Chan1[j];
}

transition recv_req_exclusive(n)
requires { Sync = True && Curcmd = Empty2 && Chan1[n] = Reqe }
{ 
  Curcmd := Reqe; 
  CurClient := n; 
  Invset[j] := case | _ : Shrset[j];
  Chan1[j] := case 
  	       | j = n : Empty2 
	       | _ : Chan1[j] ;
}

transition send_inv_1(n)
requires { Sync = True && Chan2[n] = Empty2 && Invset[n] = True && Curcmd = Reqe }
{ 
  Chan2[j] := case
	       | j = n : Inv 
	       | _ : Chan2[j] ;
  Invset[j] := case
  	       | j = n : False 
	       | _ : Invset[j];
}

transition send_inv_2(n)
requires { Sync = True && Chan2[n] = Empty2 && Invset[n] = True && 
	  Curcmd = Reqs && Exgntd = True}
{ 
  Chan2[j] := case
  	       | j = n : Inv 
	       | _ : Chan2[j] ;
  Invset[j] := case 
  	       | j = n : False 
	       | _ : Invset[j] ;
}

transition send_invack(n)
requires { Sync = True && Chan2[n] = Inv && Chan3[n] = Empty2 }
{
  Chan2[j] := case
  	       | j = n : Empty2 
	       | _ : Chan2[j] ;
  Chan3[j] := case
  	       | j = n : Invack 
	       | _ : Chan2[j] ; (*HERE*)
  Cache[j] := case 
  	       | j = n : Invalid 
	       | _ : Cache[j] ;
}
    
transition recv_invack(n)
requires { Sync = True && Chan3[n] = Invack && Curcmd <> Empty2 }
{ 
  Exgntd := False;
  Chan3[j] := case 
  	       | j = n : Empty2 
	       | _ : Chan3[j] ;
  Shrset[j] := case
  	        | j = n : False 
		| _ : Shrset[j] ;
}

transition send_gnt_shared(n)
requires { Sync = True && CurClient = n && Curcmd = Reqs && 
	  Exgntd = False && Chan2[n] = Empty2 }
{ 	  
  Curcmd := Empty2;
  Chan2[j] := case 
  	       | j = n : Gnts 
	       | _ : Chan2[j] ;
  Shrset[j] := case 
	        | j = n : True 
		| _ : Shrset[j] ;
}

transition send_gnt_exclusive(n)
requires { Sync = True && CurClient = n && Curcmd = Reqe &&
	  Chan2[n] = Empty2 && Shrset[n] = False && 
          forall_other j. Shrset[j] = False }
{ 
  Curcmd := Empty2; 
  Exgntd := True ;
  Chan2[j] := case
               | j = n : Gnte 
	       | _ : Chan2[j] ;
  Shrset[j] := case 
	       | j = n : True 
	       | _ : Shrset[j] ;
}

transition recv_gnt_shared(n)
requires { Sync = True && Chan2[n] = Gnts }
{
  Cache[j] := case 
               | j = n : Shared 
	       | _ : Cache[j] ;
  Chan2[j] := case 
	       | j = n : Empty2 
	       | _ : Chan2[j] ;
}

transition recv_gnt_exclusive(n)
requires { Sync = True && Chan2[n] = Gnte }
{
  Cache[j] := case 
               | j = n : Exclusive 
	       | _ : Cache[j] ;
  Chan2[j] := case 
	       | j = n : Empty2 
	       | _ : Chan2[j] ;
}
