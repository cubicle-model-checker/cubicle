var Turn : proc
array Want[proc] : bool
array Crit[proc] : bool

init (z) { Want[z] = False && Crit[z] = False }

transition req (i)
requires { Want[i] = False }
{ 
  Want[i] := True;
  Turn := i;
}

transition enter (i)
requires { Want[i] = True && Crit[i] = False && Turn = i }
{ 
  Crit[i] := True;
}

transition exit (i)
requires { Crit[i] = True }
{ 
  Crit[i] := False;
  Want[i] := False;
}
